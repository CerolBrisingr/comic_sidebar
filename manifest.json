{

  "manifest_version": 2,
  "name": "Improved Comic Bookmarks",
  "description": "Will show comics and your recent viewing history of them.",
  "version": "0.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "sb_webcomic_sidebar@whythis.format",
      "strict_min_version": "54.0a1"
    }
  },

  "sidebar_action": {
    "default_icon": "icons/icon.png",
    "default_title" : "Comic Bookmarks",
    "default_panel": "sidebar/sidebar_panel.html"
  },
  
  "browser_action": {
    "default_icon": {
      "48": "icons/icon_48.png"
    },
    "default_title": "Comic Sidebar"
  },
  
  "background": {
    "scripts": ["background/background.js"]
  },

  "permissions": ["storage", "tabs"],

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }

}
